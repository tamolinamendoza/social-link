<div class="card-panel layout z-depth-3 white_to_bottom">

    <div class="business_card z-depth-5">

      <div id="name" class="field"><%=@first_name%> <%=@last_name%></div>
      <div id="email" class="field">
        <i class="material-icons icon">email</i>
        <a href="mailto:<%=@email%>" class="link"><%=@email%></a>
      </div>

      <div id="phone" class="field"><i class="material-icons icon">phone</i>
        <a href="tel:<%=@phone%>" class="link"><%=@phone%></a>
      </div>
      <div id="work" class="field"><span><%=@work%></span></div>
      <div id="address_icon" class="field"><i class="material-icons icon">location_on</i></div>
      <div id="address" class="field">
        <a href="http://maps.google.com/maps?z=12&t=m&q=<%=@address%>" class="link" target="_blank"><%=@address%></a>
      </div>

      <img id="qr" class="field" src="https://api.qrserver.com/v1/create-qr-code/?data=<%=@qr_code%>&amp;size=100x100" alt="" title="">
    </div>
    <br><br><br>
    <br>
</div>

<a class="waves-effect waves-light btn modal-trigger send_button button_formatting_send z-depth-3" href="#modal1">Send your Card!</a>


<div id="modal1" class="modal">
    <div class="modal-content">
      <h5> Get URL:</h5>
          <%=@qrcode%>
      <br>
      <h5> Send by text message:</h5>
      <br>
      <h5> Send by Email:</h5>
    </div>
    <div class="modal-footer">
      <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Done</a>
    </div>
  </div>

<script>Materialize.toast('Done! Here is your card:', 2500, "toast_final")</script>
